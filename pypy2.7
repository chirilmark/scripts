#!/bin/sh
pypy_url=https://bitbucket.org/pypy/pypy/downloads/pypy2.7-v7.2.0-linux64.tar.bz2
pypy_name=${pypy_url##*/}
pypy_name=${pypy_name%.tar.bz2}

if [ -x ~/opt/${pypy_name}/bin/pypy ]; then
    exec ~/opt/${pypy_name}/bin/pypy "$@"
elif [ -x /usr/bin/pypy ]; then
    exec /usr/bin/pypy "$@"
else
    cat 1>&2 <<.
To install pypy2.7 please do

  cd ~/tmp
  wget -c ${pypy_url}
  mkdir -p ~/opt
  tar -xf ${pypy_url##*/} -C ~/opt

.
    exit 1
fi
